@model GCDataTier.Models.Skill

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Skill</legend>

        @Html.HiddenFor(model => model.SkillId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillLevelDescription, "SkillLevel")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SkillLevelDescription", String.Empty)
            @Html.ValidationMessageFor(model => model.SkillLevelDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillCategory)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SkillCategory)
            @Html.ValidationMessageFor(model => model.SkillCategory)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillLevelId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SkillLevelId)
            @Html.ValidationMessageFor(model => model.SkillLevelId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
