@model IEnumerable<GCDataTier.Models.NPOProject>

@{
    ViewBag.Title = "Index";
}

<h2 class="object-title">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            NPO Name
        </th>
        <th>
            Project Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NPO.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.AdditionalDetails)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NPOProjectId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NPOProjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NPOProjectId })
        </td>
    </tr>
}

</table>
